<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPruebasEnBlanco.Views.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Frame  BackgroundColor="Aquamarine"  Padding="24">
                <Label Text="INICIO" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </Frame>
            <Label Text="Pruebas Gestión de proyectos" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" />
            <Button Text="Prueba de Grid" Margin="40" CornerRadius="15" Clicked="AbrirPruebaDeGrid"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>